---
import { Image } from "astro:assets";
import { TestimonialCard } from "../components/TestimonialCard";
import { testimonials } from "../data";
import { SectionTitle } from './SectionTitle';
---

<SectionTitle>Customer Testimonials</SectionTitle>

<div
  id="testimonials"
  class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6 lg:gap-10 xl:gap-14 px-6 md:px-10 lg:px-16 xl:px-20 py-10"
>
  {
    testimonials.map(({ logoSrc, company, quote }) => (
      <TestimonialCard testimonialText={quote} company={company}>
        <Image
          class="size-14 rounded-full"
          src={logoSrc}
          alt=""
          width={400}
          height={400}
        />
      </TestimonialCard>
    ))
  }
</div>
